{
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "command": ".claude\\hooks\\run-python.bat .claude\\hooks\\auto-review.py \"%PROMPT%\"",
            "timeout": 15,
            "type": "command"
          }
        ],
        "matcher": "*(review|质量|quality|bug|问题|优化|refactor)*"
      },
      {
        "hooks": [
          {
            "command": ".claude\\hooks\\run-python.bat .claude\\hooks\\text-expander.py",
            "timeout": 10,
            "type": "command"
          }
        ],
        "matcher": "*"
      }
    ]
  }
}