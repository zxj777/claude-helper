{
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "command": "bash .claude/hooks/run-python.sh .claude/hooks/task-notification.py",
            "timeout": 5,
            "type": "command"
          }
        ],
        "matcher": "*"
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "command": "bash .claude/hooks/run-python.sh .claude/hooks/text-expander.py",
            "timeout": 10,
            "type": "command"
          }
        ],
        "matcher": "*"
      }
    ]
  }
}